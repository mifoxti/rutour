<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileLogged">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helloTxt"
            android:text="Доброго времени суток!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/my_font"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            android:layout_marginStart="16dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Режим создателя"
            android:fontFamily="@font/my_font"
            android:id="@+id/creatermode"
            app:layout_constraintTop_toBottomOf="@id/helloTxt"
            app:layout_constraintStart_toStartOf="@id/helloTxt"
            app:layout_constraintEnd_toEndOf="@id/helloTxt" />

        <Button
            android:id="@+id/logoutBtn"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="280dp"
            android:layout_marginTop="16dp"
            android:text="Выйти из профиля"
            android:fontFamily="@font/my_font"
            app:layout_constraintTop_toBottomOf="@id/creatermode"
            app:layout_constraintStart_toStartOf="@id/creatermode"
            app:layout_constraintEnd_toEndOf="@id/creatermode"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
